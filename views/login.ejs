<!DOCTYPE html>
<html>
    <% include head %>

    <body style="background:#fbfbfb;">
        <div class="container">
            <div class="row">
                <div class="col-md-10 offset-md-1 mt-5">
                    <!-- Horizontal Form -->
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title text-center mt-2">Login</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form class="form-horizontal">
                            <div class="card-body">
                                <div class="form-group row">
                                    <label
                                        for="inputEmail3"
                                        class="col-sm-2 col-form-label"
                                        >Email</label
                                    >
                                    <div class="col-sm-10">
                                        <input
                                            type="email"
                                            class="form-control"
                                            id="inputEmail3"
                                            placeholder="Email"
                                        />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label
                                        for="inputPassword3"
                                        class="col-sm-2 col-form-label"
                                        >Password</label
                                    >
                                    <div class="col-sm-10">
                                        <input
                                            type="password"
                                            class="form-control"
                                            id="inputPassword3"
                                            placeholder="Password"
                                        />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="offset-sm-2 col-sm-10">
                                        <div class="form-check">
                                            <input
                                                type="checkbox"
                                                class="form-check-input"
                                                id="exampleCheck2"
                                            />
                                            <label
                                                class="form-check-label mt-1"
                                                for="exampleCheck2"
                                                >Remember me</label
                                            >
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer text-center">
                                <button type="submit" class="btn btn-primary">
                                    Sign in
                                </button>
                                &nbsp; or &nbsp;&nbsp;
                                <a
                                    href="/auth/register"
                                    style="color:#367fa9; letter-spacing: 2px;"
                                    >Register</a
                                >
                            </div>
                            <!-- /.card-footer -->
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
